<Window x:Class="Zui.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zui"
        mc:Ignorable="d"
        Title="ResultWindow" Height="250" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock TextWrapping="Wrap" Text="Вам предлагается использовать:" Height="25" TextAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,10,0,0" VerticalAlignment="Top" TextDecorations="{x:Null}" FontStyle="Italic">
            <TextBlock.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"/>
            </TextBlock.Background>
        </TextBlock>
        
        <TextBox Height="138" Margin="50,60,60,0" TextWrapping="Wrap" VerticalAlignment="Top" Name="Result_TextBox" TextAlignment="Center"/>

    </Grid>
</Window>
